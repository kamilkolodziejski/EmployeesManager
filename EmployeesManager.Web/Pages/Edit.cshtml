@page
@model EmployeesManager.Web.Pages.EditModel

@{
    ViewData["Title"] = "Edytuj pracownika";
}

<h2>@ViewData["Title"]</h2>

@*<h4>EmployeeDto</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeDto.Id" />
            <div class="form-group">
                <label asp-for="EmployeeDto.NIP" class="control-label"></label>
                <input asp-for="EmployeeDto.NIP" class="form-control" />
                <span asp-validation-for="EmployeeDto.NIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDto.FirstName" class="control-label"></label>
                <input asp-for="EmployeeDto.FirstName" class="form-control" />
                <span asp-validation-for="EmployeeDto.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDto.LastName" class="control-label"></label>
                <input asp-for="EmployeeDto.LastName" class="form-control" />
                <span asp-validation-for="EmployeeDto.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDto.BirthDate" class="control-label"></label>
                <input asp-for="EmployeeDto.BirthDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="EmployeeDto.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDto.Position" class="control-label"></label>
                <input asp-for="EmployeeDto.Position" class="form-control" />
                <span asp-validation-for="EmployeeDto.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDto.Salary" class="control-label"></label>
                <input asp-for="EmployeeDto.Salary" class="form-control" />
                <span asp-validation-for="EmployeeDto.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
